<div class="container-fluid">
    <div class="row">

        <h2 class="text-center">Forgot your password?</h2>

        <div class="col-md-4 offset-md-4">
            <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="field form-group"><br>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Enter email' %>
            </div><br>

            <div class="actions form-group">
                <%= f.submit "Send", disable_with: 'Submiting...', class: 'btn btn-success' %>
            </div>
            <% end %><br>

            <%= render "devise/shared/links" %><br>
        </div>
    </div>
</div>